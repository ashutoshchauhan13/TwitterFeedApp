<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/twitter_login_username"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:hint="@string/twitter_login_username"
        android:textSize="14dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/twitter_login_password"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twitter_login_username"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:hint="@string/twitter_login_password"
        android:textSize="14dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/twitter_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/twitter_login_password"
        android:layout_below="@id/twitter_login_password"
        android:layout_marginBottom="20dp"
        android:text="@string/twitter_login"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:textStyle="bold"
        android:typeface="sans" >
    </Button>

</RelativeLayout>